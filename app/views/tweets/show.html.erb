<div class="container">
    <div class="row mt-3">
        <div class ="col-2"></div>
        <div class ="col-8">
            <h1> Showing Tweet </h1>    
            <div class="card mt-2">
            <h4><div class="card-header"><%=@tweet.model.username%></div></h4>
                <div class="card-body">
                <p class="card-text"><%= @tweet.body %></p>
                <footer class="blockquote-footer"> Mood: 
                    <cite title="Source Title"><%= @tweet.mood %></cite>
                </footer>
                <%  if @tweet.model_id == current_model.id%>
                    <%= link_to "Delete Tweet", tweet_path(@tweet), 
                        method: :delete, data: { confirm: "Are you sure?" },
                        class:"btn btn-outline-primary btn-sm mt-1 mb-1"%>
                <%  end %> 
                <h5>Comments: <%= @tweet.comments.count()%></h5> 
                <%= render @tweet.comments%>
                <%= render "comments/form"%>
                
                </div>
                
            </div>
            
        </div>
    </div>
</div>
  


